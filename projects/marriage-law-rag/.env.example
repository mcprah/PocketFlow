# Marriage Law RAG System Environment Variables

# Required: OpenAI API Key for embeddings and LLM
OPENAI_API_KEY=your_openai_api_key_here

# Database Configuration - Using current user
DATABASE_URL=postgresql://$(whoami)@localhost:5432/marriage_law_db

# Alternative database configuration with custom user
# DATABASE_URL=postgresql://marriage_law_user:marriage_law_pass@localhost:5432/marriage_law_db

# Application Settings
DEBUG=true
LOG_LEVEL=info

# OCR Configuration
OCR_ENABLED=true
# TESSERACT_CMD=/opt/homebrew/bin/tesseract  # M1 Mac
# TESSERACT_CMD=/usr/bin/tesseract         # Intel Mac/Linux

# File Processing
MAX_FILE_SIZE_MB=50
UPLOAD_DIR=uploads

# Vector Store Settings
VECTOR_DIMENSIONS=1536
SIMILARITY_THRESHOLD=0.7

# Query Settings
MAX_QUERY_LENGTH=500
MAX_RESULTS_PER_QUERY=20
DEFAULT_RESULTS_PER_QUERY=5

# Security
ALLOWED_ORIGINS=["http://localhost:8000","http://127.0.0.1:8000"]

# Optional: Caching (Redis)
CACHE_ENABLED=false
REDIS_URL=redis://localhost:6379
CACHE_TTL_SECONDS=3600

# Optional: Background Jobs (Celery)
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/0

# Optional: Monitoring
ENABLE_METRICS=false
METRICS_PORT=9090
EOF < /dev/null